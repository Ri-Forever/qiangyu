<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ed3f3f"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/ib_demand_release_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/fanhui3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="确认订单"
            android:textColor="#464646"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_buttom"
        android:gravity="center"
        android:padding="10dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名 : "
            android:textColor="#000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入姓名"
            android:inputType="text"
            android:lines="1"
            android:maxLines="1"
            android:textColorHint="#7e7e7e"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_buttom"
        android:gravity="center"
        android:padding="10dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电话 : "
            android:textColor="#000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入手机号"
            android:inputType="number"
            android:lines="1"
            android:maxLength="11"
            android:maxLines="1"
            android:textColorHint="#7e7e7e"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_buttom"
        android:gravity="center"
        android:padding="10dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址 : "
            android:textColor="#000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入详细地址"
            android:inputType="text"
            android:maxLines="1"
            android:textColorHint="#7e7e7e"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_shouhuodizhi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/tj"
        android:drawableRight="@mipmap/home_arrow_right"
        android:gravity="center"
        android:padding="10dp"
        android:text="添加或选择收货地址"
        android:textSize="20sp"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/ll_moren"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="当前默认收货地址,点击重新选择"
            android:textColor="#FE6100"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#8f8f8f" />

        <TextView
            android:id="@+id/tv_shouhuoren"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="收货人: "
            android:textColor="#000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_shoujihao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="手机号: "
            android:textColor="#000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_dizhi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="收货地址: "
            android:textColor="#000"
            android:textSize="17sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#8f8f8f" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/border_buttom"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注:若您对订单有特殊要求,请在此填写备注,250个字以内"
            android:textColor="#7e7e7e"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:gravity="top"
            android:hint="请输入需求内容"
            android:inputType="text"
            android:paddingBottom="10dp"
            android:textColorHint="#7e7e7e"
            android:textSize="15sp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="40dp">

            <ListView
                android:id="@+id/lv_confirm_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ListView>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:background="#FFF">

            <TextView
                android:id="@+id/tv_zongjia"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/btn_submit"
                android:gravity="center"
                android:text="总计:￥ 0.00"
                android:textColor="#ff0000" />

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="#FE6100"
                android:gravity="center"
                android:text="提交订单"
                android:textColor="#000000"
                android:textSize="15sp" />
        </RelativeLayout>
    </FrameLayout>

</LinearLayout>