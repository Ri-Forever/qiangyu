<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_buttom"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_tupian"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/biglogo"
            android:textColor="#000000"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_shangpinming"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="2"
                android:text="抢鱼APP"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_guigecanshu1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:layout_marginBottom="10dp"
                android:text="抢鱼APP" />

            <TextView
                android:id="@+id/tv_guigecanshu2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="抢鱼APP"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_jiage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥ 400.00"
                    android:textColor="#ff0000" />

                <TextView
                    android:id="@+id/tv_shuliang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="X 1" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>