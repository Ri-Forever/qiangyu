<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/blackground_linearlayout_frame"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blackground_text"
            android:padding="5dp"
            android:text="编号 : "
            android:textColor="#FFF" />


        <TextView
            android:id="@+id/tv_biaoti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="标题 : "
            android:textColor="#000" />

        <TextView
            android:id="@+id/tv_lianxiren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="联系人 : "
            android:textColor="#000" />

        <TextView
            android:id="@+id/tv_dianhua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="联系电话 : "
            android:textColor="#000" />

        <TextView
            android:id="@+id/tv_dizhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="地址 : "
            android:textColor="#000" />

        <TextView
            android:id="@+id/tv_neirong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="内容 : "
            android:textColor="#000" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eee" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:text="当前状态"
                android:textColor="#9c9c9c" />

            <TextView
                android:id="@+id/tv_tianxie"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:layout_toLeftOf="@+id/tv_quxiao"
                android:background="@drawable/blackground_textview_frame"
                android:gravity="center"
                android:padding="5dp"
                android:text="填写合同"
                android:textColor="#fa7801"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_quxiao"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:background="@drawable/blackground_textview_frame"
                android:gravity="center"
                android:padding="5dp"
                android:text="取消"
                android:textColor="#fa7801"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_chakan"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:background="@drawable/blackground_textview_frame"
                android:gravity="center"
                android:padding="5dp"
                android:text="查看合同"
                android:textColor="#fa7801"
                android:visibility="visible" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>