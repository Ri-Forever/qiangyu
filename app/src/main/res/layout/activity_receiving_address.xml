<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/blackground_linearlayout_frame"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_shouhuoren"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="收货人: "
            android:textColor="#000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_shoujihao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="手机号: "
            android:textColor="#000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_dizhi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="收货地址: "
            android:textColor="#000"
            android:textSize="17sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#8f8f8f" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_sheweimoren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/blackground_textview_frame"
                android:gravity="center"
                android:padding="5dp"
                android:text="设为默认地址"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_moren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/blackground_textview_frame"
                android:gravity="center"
                android:padding="5dp"
                android:text="当前设置的默认地址"
                android:textColor="#fa7801"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_bianji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv_shangchu"
                android:drawableLeft="@mipmap/bianji"
                android:gravity="center"
                android:padding="5dp"
                android:text="编辑" />

            <TextView
                android:id="@+id/tv_shangchu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawableLeft="@mipmap/shanchu"
                android:gravity="center"
                android:padding="5dp"
                android:text="删除" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>